{
    "name": "brainstorm/slim4locale",
    "type": "library",
    "description": "A simple Middleware for Slim 4 to use locale in uri, part of the PerSeo CMS",
    "keywords": [
        "Slim",
        "PerSeo",
        "Locale"
    ],
    "homepage": "https://github.com/BrainStormDevel/perseo",
    "license": "MIT",
    "require": {
	"php": "^7.2 || ^8.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.3"
    },
	"autoload": {
        "psr-4": {
            "BrainStorm\\Slim4Locale\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrainStorm\\Slim4Locale\\Test\\": "tests/"
        }
    }
}
